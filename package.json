{
  "name": "fifo-logger",
  "version": "1.0.0",
  "description": "Simple event logger for the browser and node.js",
  "author": "Luc Patiny",
  "keywords": [],
  "type": "module",
  "exports": "./lib/index.js",
  "license": "MIT",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build --entry lib/index.js --root FifoLogger",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check .",
    "prettier-write": "prettier --write .",
    "test": "npm run test-only && npm run check-types && npm run eslint && npm run prettier",
    "test-only": "vitest run --coverage",
    "tsc": "npm run clean && npm run tsc-build",
    "tsc-build": "tsc --project tsconfig.build.json"
  },
  "dependencies": {
    "typescript-event-target": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/throttle-debounce": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@zakodium/tsconfig": "^1.0.2",
    "cheminfo-build": "^1.2.1",
    "eslint": "^9.29.0",
    "eslint-config-cheminfo-typescript": "^18.0.1",
    "pino": "^9.7.0",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "throttle-debounce": "^5.0.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/fifo-logger.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/fifo-logger/issues"
  },
  "homepage": "https://github.com/cheminfo/fifo-logger#readme"
}
